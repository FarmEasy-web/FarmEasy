@model FarmEasy.ViewModel.Prediction.PredictionViewModel
@{
    ViewData["Title"] = "Prediction";
}

<h4>Prediction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">City</label>
                @Html.DropDownListFor(x => x.CityId,new SelectList(Model.City, "Id", "CityName"), "-Please Select City -", new { @class = "form-control selectpicker"})
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Soil Type</label>
                @Html.DropDownListFor(x => x.SoilTypeId, new SelectList(Model.SoilTypes, "Id", "SoilName"), "-Please Select Soil -", new { @class = "form-control selectpicker"})
                <span asp-validation-for="SoilTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

