<section class="contact-section">
    <div class="container">

        <div class="row">

            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                <div class="contact-us-section">
                    <div >
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div >

                        <h4>Send Your Request</h4>
                    </div>
                    <form asp-action="Create" class="theme-form-two form-validation" autocomplete="off">
                        <textarea asp-for="Message" placeholder="Message" name="message"></textarea>
                        <input type="text" asp-for="Subject" placeholder="Subject" name="sub">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <input type="text" asp-for="Name" placeholder="Name" name="name">
                            </div><!-- /.col -->
                            <div class="col-md-6 col-sm-12">
                                <input type="email" asp-for="Email" placeholder="Email" name="email">
                            </div><!-- /.col -->
                            
                        </div><!-- /.row -->
                        <div class="buttonDiv">
                            <button type="submit" class="hvr-shutter-out-horizontal-two round-border">Submit Text</button>
                        </div><!-- /buttonDiv -->
                    </form> <!-- /.theme-form-two -->
